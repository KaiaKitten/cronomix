{
    "include": [ "src/**/*" ],
    "compilerOptions": {
        "target": "es2022",
        "lib": [ "es2022" ],
        "outDir": "./.build",
        "strict": true,
        "pretty": true,
        "incremental": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "downlevelIteration": true,
        "skipDefaultLibCheck": true,
        "exactOptionalPropertyTypes": true,
        "forceConsistentCasingInFileNames": true
    }
}
